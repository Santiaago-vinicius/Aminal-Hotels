generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- TABELA DE TUTORES ---
model Tutor {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  phone    String
  password String
  animals  Animal[] // Relação: Um tutor tem vários animais
}

// --- TABELA DE ANIMAIS ---
model Animal {
  id      String @id @default(uuid())
  name    String
  species String
  breed   String
  age     Int
  tutorId String // Chave estrangeira (quem é o dono?)
  tutor   Tutor  @relation(fields: [tutorId], references: [id])
}